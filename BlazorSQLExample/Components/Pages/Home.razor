@page "/"

@using Microsoft.AspNetCore.Authorization

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<p>Welcome to your new app.</p>

<AuthorizeView>
    <Authorized>
        <p>You are logged in as <a href="Account/Manage">@context.User.Identity?.Name!</a></p>
    </Authorized>
    <NotAuthorized>
        <p> Log in for access to the <a href="Calculator">Calculator</a> and <a href="Movies">Movies</a> pages!</p>
    </NotAuthorized>
</AuthorizeView>
